package Selenium;

import org.openqa.selenium.By;

public class CustomXpath {
	
	static Main main = new Main();

	public static void main(String[] args) {

		validateFacebookCustomXPath();
		
	}

	
	
	public static void validateFacebookCustomXPath() {
		
		main.loadFaceBookPage();
		
		main.driver.findElement(By.xpath("//input[@type='email']")).sendKeys("someemail.email.com");
		
		main.driver.findElement(By.xpath("//input[@data-testid='royal_email']")).sendKeys("somepassword");
		
		main.driver.findElement(By.xpath("//input[@value='Log In']")).sendKeys("someemail.email.com");
		
		
	}
}
