<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="ABC Loan Bank">
	<test thread-count="5" name="Car Loan Test Cases">
		<classes>
			<class name="testcases.CarLoanTestCases">

				<methods>
					<exclude name="mobile.*" /> <!-- This statement will include all test cases that starts with mobile -->

				</methods>
			</class>

		</classes>
	</test>

	<test name="Home Loan Test Cases">
		<classes>
			<class name="testcases.HomeLoanTestCases" />
		</classes>
	</test>
</suite> 
